var vm = new Vue({
	el:'#rrapp',
	data:{
#if(${search})
        q:{
            ${searchColumn.attrname}: null
        },
#end
		showList: true,
		title: null,
		${classname}: {}
	},
	methods: {
		query: function () {
			vm.reload();
		},
		add: function(){
			vm.showList = false;
			vm.title = "新增";
			vm.${classname} = {};
		},
		update: function (event) {
			var $pk.attrname = getSelectedRow();
			if($pk.attrname == null){
				return ;
			}
			vm.showList = false;
            vm.title = "修改";
            
            vm.getInfo(${pk.attrname})
		},
		saveOrUpdate: function (event) {
			if(vm.${classname}.${pk.attrname} == null) {
                $.ajax({
                    type: "POST",
                    url: baseURL + "${moduleName}/${pathName}",
                    contentType: "application/json",
                    data: JSON.stringify(vm.${classname}),
                    success: function (r) {
                        if (r.status === 201) {
                            alert('操作成功', function (index) {
                                vm.reload();
                            });
                        } else {
                            alert(r.message);
                        }
                    }
                });
            }else{
                $.ajax({
                    type: "PUT",
                    url: baseURL + "${moduleName}/${pathName}/" + vm.${classname}.${pk.attrname},
                    contentType: "application/json",
                    data: JSON.stringify(vm.${classname}),
                    success: function (r) {
                        if (r.status === 200) {
                            alert('操作成功', function (index) {
                                vm.reload();
                            });
                        } else {
                            alert(r.message);
                        }
                    }
                });
			}
		},
		del: function (event) {
			var ${pk.attrname}s = getSelectedRows();
			if(${pk.attrname}s == null){
				return ;
			}
			
			confirm('确定要删除选中的记录？', function(){
				$.ajax({
					type: "DELETE",
				    url: baseURL + "${moduleName}/${pathName}",
                    contentType: "application/json",
				    data: JSON.stringify(${pk.attrname}s),
				    success: function(r){
						if(r.status == 204){
							alert('操作成功', function(index){
								$("#jqGrid").trigger("reloadGrid");
							});
						}else{
							alert(r.message);
						}
					}
				});
			});
		},
		getInfo: function(${pk.attrname}){
			$.get(baseURL + "${moduleName}/${pathName}/"+${pk.attrname}, function(r){
                vm.${classname} = r.${classname};
            });
		},
		reload: function (event) {
			vm.showList = true;
			var page = $("#jqGrid").jqGrid('getGridParam','page');
			$("#jqGrid").jqGrid('setGridParam',{
#if(${search})
                postData:{'${searchColumn.attrname}': vm.q.${searchColumn.attrname}},
#end
                page:page
            }).trigger("reloadGrid");
		}
	}
});